{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "references": [
    { "path": "apps/api" },
    { "path": "apps/web" },
    { "path": "packages/shared" }
  ],
  "include": [
    "packages/*/src/**/*",
    "apps/*/src/**/*"
  ]
}
