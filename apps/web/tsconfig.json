{
  "extends": "@gigachads.de/typescript/react.json",
  "compilerOptions": {
    "outDir": "dist",
    "tsBuildInfoFile": ".tsbuildinfo",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@views/*": ["views/*"],
      "@assets/*": ["assets/*"],
      "@hooks/*": ["hooks/*"],
      "@servicesV1/*": ["services/v1/*"],
      "@utils/*": ["utils/*"]
    },
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", ".turbo"]
}